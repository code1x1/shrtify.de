---
import Layout from "../layouts/Layout.astro";
import ShortcodeForm from "../components/shortcodeForm";
import ShortcodeList from "../components/shortcodeList";
---

<Layout title="Shrtify">
	<main>
		<h1>Shrtify de</h1>
		<ShortcodeForm client:only="react" />
		<ShortcodeList client:only="react"/>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 2rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>